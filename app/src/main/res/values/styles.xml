<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_6ssp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_7ssp</item>
    </style>



    <!-- textlayout style -->
    <style name="CustomTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- textlayout style -->
    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- textlayout style -->
    <style name="spinnerHint" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>