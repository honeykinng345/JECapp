<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="6">
    ><LinearLayout
        android:id="@+id/form"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/imgborder"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_3sdp"

            android:paddingVertical="@dimen/_2sdp"
            android:src="@drawable/formimg" />
    </LinearLayout>


    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:src="@drawable/khabib"
        app:c_border="true"
        app:c_border_color="#4A97E4"
        app:c_border_width="1dp"
        app:c_shadow="true"
        app:c_shadow_gravity="end"
        app:c_shadow_radius="5.5" />

    <ImageView
        android:id="@+id/videoIcon"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:layout_weight="1"
        android:src="@drawable/ic_playicon" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="@dimen/_5sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nationality"
            android:textColor="@color/black"
            android:textSize="@dimen/job_list_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:textColor="@color/black"
            android:textSize="@dimen/job_list_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_type"
            android:textColor="@color/black"
            android:textSize="@dimen/job_list_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textColor="@color/black"
            android:textSize="@dimen/job_list_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="@dimen/job_list_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nativ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Native"
            android:textSize="@dimen/job_list_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />


        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1000 rmb to 2000 rmb"
            android:textSize="@dimen/job_list_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/fullTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Time"
            android:textSize="@dimen/job_list_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="@dimen/job_list_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lahore"
            android:textSize="@dimen/job_list_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>

    <Button
        android:id="@+id/hireBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_weight="1"
        android:background="@drawable/buttonvertical"
        android:text="@string/hire"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_6ssp"/>


    <LinearLayout
        android:id="@+id/other"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/buttonvertical"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_6ssp" />

        <Button
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rounded_button"
            android:text="Reject"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_6ssp" />


        <TextView
            android:id="@+id/offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Offer: 1200rmb"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_5ssp" />

    </LinearLayout>


</LinearLayout>
