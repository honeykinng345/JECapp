<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/_10sdp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/_15sdp"
        android:text="Select Interview Date Time"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backrough"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interview Date"
            android:textAllCaps="true"
            android:textSize="@dimen/dialogTextSize"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:elevation="@dimen/_1sdp">


            <TextView
                android:id="@+id/day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/whiteroundbg"
                android:gravity="center"
                android:paddingVertical="@dimen/_8sdp"
                android:text="23"
                android:textSize="@dimen/dialogTextSize"
                android:textStyle="bold"
                android:elevation="@dimen/_2sdp"
                />

            <TextView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/whiteroundbg"
                android:gravity="center"
                android:paddingVertical="@dimen/_8sdp"
                android:text="November"
                android:textSize="@dimen/dialogTextSize"
                android:textStyle="bold"
                android:elevation="@dimen/_2sdp"/>

            <TextView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/whiteroundbg"
                android:gravity="center"
                android:paddingVertical="@dimen/_8sdp"
                android:text="2020"
                android:textSize="@dimen/dialogTextSize"
                android:textStyle="bold"
                android:elevation="@dimen/_2sdp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="starting time"
            android:textAllCaps="true"
            android:textSize="@dimen/dialogTextSize"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>
        <RelativeLayout
            android:id="@+id/starTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/whiteroundbg"
            android:elevation="@dimen/_2sdp">

            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:layout_alignParentLeft="true"
                android:text="10 AM"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


        </RelativeLayout>



    </LinearLayout>


