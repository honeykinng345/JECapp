<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_react01"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="@dimen/_5sdp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_navigate_before_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="@string/school"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="16dp"
        android:elevation="@dimen/_2sdp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/candidates"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:hint="@string/hire"
                android:textColorHint="@color/black"
                android:letterSpacing="0.1"
                android:textSize="@dimen/form_text_size"/>

        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receivdOffers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingVertical="16dp"
        android:elevation="@dimen/_2sdp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/candidates"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:hint="Received Offers"
                android:textColorHint="@color/black"
                android:letterSpacing="0.1"
                android:textSize="@dimen/form_text_size"/>

        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/post_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="16dp"
        android:elevation="@dimen/_2sdp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/applications"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:hint="@string/our_jobs"
                android:textColorHint="@color/black"
                android:letterSpacing="0.1"
                android:textSize="@dimen/form_text_size"/>

        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/apply_for_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="16dp"
        android:elevation="@dimen/_2sdp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/apply03"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:hint="@string/post_jobs"
                android:textColorHint="@color/black"
                android:letterSpacing="0.1"
                android:textSize="@dimen/form_text_size"/>

        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="16dp"
        android:elevation="@dimen/_2sdp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/consulting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:hint="@string/hired"
                android:textColorHint="@color/black"
                android:letterSpacing="0.1"
                android:textSize="@dimen/form_text_size"/>

        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="16dp"
        android:elevation="@dimen/_2sdp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/calendar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:hint="@string/scheduled_interviews"
                android:textColorHint="@color/black"
                android:letterSpacing="0.1"
                android:textSize="@dimen/form_text_size"/>

        </LinearLayout>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


    </RelativeLayout>



</LinearLayout>