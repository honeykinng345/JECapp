<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activites.SplashActivity"
    >
    <ImageView
        android:id="@+id/ivLogoSplash"
        android:layout_width="180dp"
        android:layout_height="202dp"
        android:layout_marginEnd="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/appicon" />

    <TextView
        android:id="@+id/compnayName"
        android:layout_width="300dp"
        android:textStyle="bold|italic"
        android:textSize="22sp"
        android:layout_height="55dp"
        android:layout_below="@+id/ivLogoSplash"


        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"


        android:visibility="gone"
        android:text="Choose Anything"
        android:textColor="@color/colorPrimary"






        android:gravity="center"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/compnayName"
        android:layout_marginTop="5dp"
        android:textStyle="bold"

        android:textSize="16sp"
        android:id="@+id/tv1"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text=" JEC will get for you "
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="24dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:id="@+id/tv2"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:text="JEC提供一切 , 您想要的服务"
        android:layout_below="@+id/tv1"
        android:layout_height="wrap_content">

    </TextView>





</RelativeLayout>

