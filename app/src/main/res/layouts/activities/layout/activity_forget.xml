<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.ForgetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_react01"
        android:padding="10dp"
        android:id="@+id/relavtive1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_navigate_before_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:text="Forget Password/ 登录"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            />




    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/relavtive1"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:src="@drawable/ic_lock"
        android:layout_below="@+id/relavtive1"


        android:layout_marginTop="@dimen/_30sdp"
        android:layout_height="@dimen/_80sdp"

        app:tint="@color/colorPrimary">

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:text="Forget Password"
        android:textSize="@dimen/_20sdp"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:text="Provide Your Phone Number For Which You Want"
        android:textSize="@dimen/_10sdp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:text="To Reset Your Password"
        android:textSize="@dimen/_10sdp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content">

    </TextView>
    <com.hbb20.CountryCodePicker
        android:layout_width="match_parent"
        android:id="@+id/ccp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_height="wrap_content"
app:ccp_autoDetectCountry="true"
        android:layout_marginTop="40dp"

        android:padding="5dp"

        android:drawablePadding="7dp"
        android:background="@drawable/shape_rect02"
        >

    </com.hbb20.CountryCodePicker>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="10dp"
        android:hint="Phone Number / 联系电话"
        android:id="@+id/phone"
        android:drawablePadding="7dp"
        android:layout_marginStart="@dimen/_15sdp"
        android:background="@drawable/shape_rect02"
        />
    <Button
        android:id="@+id/forgetBtn"
        android:layout_width="205dp"
        android:layout_height="40dp"

        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"

        android:background="@drawable/rounded_button"
        android:text="Forget Password/ 登录"
        android:layout_below="@+id/password"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
</RelativeLayout>