<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_react01"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="@dimen/_5sdp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_navigate_before_24"
            tools:ignore="ContentDescription" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="Profile"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            />




    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@color/white"
                android:elevation="@dimen/_1sdp">

                <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/userplaceholder"
                    app:c_border="true"
                    app:c_border_color="#4A97E4"
                    app:c_border_width="1dp"
                    app:c_shadow="true"
                    app:c_shadow_color="#000"
                    app:c_shadow_gravity="end"
                    app:c_shadow_radius="5.5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JOhN"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/jecID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="JEC ID:CSA789789"
                            android:textSize="@dimen/form_text_size"
                            android:letterSpacing="0.1"
                            android:textAllCaps="true"/>

                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                    </RelativeLayout>

                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recruitment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="16dp"
                android:elevation="@dimen/_2sdp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/recruitmentIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/recruitment"
                    android:layout_gravity="center"
                    app:tint="@color/colorPrimary" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/recruitmentIcon"
                    android:hint="My JEC Recruitment"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="15dp"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/form_text_size"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/trading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="16dp"
                android:elevation="@dimen/_2sdp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/tradingIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/colorPrimary"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/trade"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tradingIcon"
                    android:hint="My JEC Trading"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:id="@+id/notification"
                    android:textSize="@dimen/form_text_size"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/cosulting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="16dp"
                android:elevation="@dimen/_2sdp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/consultIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    app:tint="@color/colorPrimary"
                    android:src="@drawable/consulting"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/consultIcon"
                    android:hint="My JEC Consulting"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/form_text_size"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="16dp"
                android:elevation="@dimen/_2sdp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/educationIcon"
                    android:layout_width="20dp"
                    app:tint="@color/colorPrimary"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/education"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/educationIcon"
                    android:hint="My JEC Education"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/form_text_size"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="16dp"
                android:elevation="@dimen/_2sdp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/serviceIcon"
                    android:layout_width="20dp"
                    app:tint="@color/colorPrimary"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/services"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/serviceIcon"
                    android:hint="My JEC Service"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/form_text_size"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="16dp"
                android:elevation="@dimen/_2sdp"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/settingstIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    app:tint="@color/colorPrimary"
                    android:src="@drawable/profilesetting"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/settingstIcon"
                    android:hint="Settings"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/form_text_size"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp"
                    />

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>



</LinearLayout>