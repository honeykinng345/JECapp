<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/relavtive1"
        android:background="@drawable/shape_react01">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTv"
            android:layout_centerVertical="true"
            android:textColor="@color/colorwhite"
            android:text="J.E.C "

            style="@style/TextAppearance.AppCompat.Title"

            android:layout_centerHorizontal="true">

        </TextView>
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:id="@+id/backBtn"
            android:src="@drawable/ic_chevron_white_left">

        </ImageButton>

    </RelativeLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:hint="Write  Your Offers"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:maxLength="6"
        android:id="@+id/offeredt"


        android:drawablePadding="7dp"
         android:layout_below="@+id/relavtive1"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textAlignment="center"
        android:background="@drawable/shape_rect02"
        android:inputType="number" />



    <Button
        android:id="@+id/btnsend"
        android:layout_width="205dp"
        android:layout_height="40dp"


        android:layout_margin="40dp"
        android:background="@drawable/rounded_button"
        android:textAllCaps="false"

        android:text="Send"
        android:layout_below="@+id/offeredt"
        android:layout_centerHorizontal="true"

        android:textColor="#FFF"
        android:textSize="@dimen/button_text_size"
        />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/congDialoug"
        android:visibility="gone"
       android:layout_marginTop="@dimen/_70sdp"
        app:lottie_rawRes="@raw/cong"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:id="@+id/tv1"
    android:layout_marginBottom="@dimen/_60sdp"
    android:textColor="@color/colorblack"
    android:visibility="gone"
    android:layout_marginTop="@dimen/_10sdp"
    android:text="Your Application Submit Successful"
    android:maxLines="1"
    android:layout_below="@+id/congDialoug"

    >

</TextView>
</RelativeLayout>